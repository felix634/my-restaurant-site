---
// src/pages/galeria.astro
import MainLayout from '../layouts/MainLayout.astro';
import Header from '../components/common/Header.astro';
---
<MainLayout title="Gallery - Gastronomo">
    <Header />
    <main class="container mx-auto py-16 px-6 mt-18">
        <h1 class="text-5xl font-bold text-center mb-12">Our Gallery</h1>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
            <img src="/gallery-1.jpg" alt="Dining room interior" class="w-full h-auto rounded-lg shadow-lg object-cover aspect-square">
            <img src="/gallery-2.jpg" alt="Chef preparing a dish" class="w-full h-auto rounded-lg shadow-lg object-cover aspect-square">
            <img src="/gallery-3.jpg" alt="Dessert presentation" class="w-full h-auto rounded-lg shadow-lg object-cover aspect-square">
            <img src="/gallery-4.jpg" alt="Wine cellar" class="w-full h-auto rounded-lg shadow-lg object-cover aspect-square">
            <img src="/gallery-5.jpg" alt="Beautifully plated dish" class="w-full h-auto rounded-lg shadow-lg object-cover aspect-square">
            <img src="/gallery-6.jpg" alt="Outdoor seating" class="w-full h-auto rounded-lg shadow-lg object-cover aspect-square">
            <img src="/gallery-7.jpg" alt="Bar area" class="w-full h-auto rounded-lg shadow-lg object-cover aspect-square">
            <img src="/gallery-8.jpg" alt="Happy customers" class="w-full h-auto rounded-lg shadow-lg object-cover aspect-square">
        </div>
    </main>
</MainLayout>