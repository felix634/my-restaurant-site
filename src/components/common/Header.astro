---
// src/components/common/Header.astro
export interface Props {
    transparent?: boolean;
}

const { transparent = false } = Astro.props;

const headerClasses = transparent
    ? 'absolute top-0 w-full z-50 bg-black bg-opacity-30'
    : 'relative top-0 w-full z-50 bg-gray-800';

const navLinks = [
    { name: 'Home', href: '/' },
    { name: 'About Us', href: '/about' },
    { name: 'Menu', href: '/menu' },
    { name: 'Gallery', href: '/galeria' },
    { name: 'Reservations', href: '/reservation' },
];
---
<header class={headerClasses}>
    <nav class="container mx-auto px-6 py-6 flex justify-between items-center text-white">
        <div class="flex items-center">
            <a href="/" class="flex items-center">
                <img 
                    src="/logo.png" 
                    alt="Gastronomo Logo" 
                    class="h-10 w-auto mr-3" 
                />
                <span class="text-xl sm:text-3xl font-cinzel tracking-wide">
                    GASTRONOMO
                </span>
            </a>
        </div>
        
        <button id="menu-button" class="md:hidden focus:outline-none z-50">
            <svg id="hamburger-icon" class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
            </svg>
            <svg id="close-icon" class="hidden h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>
        
        <div class="hidden md:flex items-center space-x-8 uppercase text-sm tracking-widest">
            {navLinks.map((link) => (
                <a href={link.href} class="relative transition duration-300 hover:text-yellow-500">
                    {link.name}
                    <span class="absolute left-0 bottom-0 w-full h-[2px] bg-yellow-500 transform scale-x-0 transition-transform duration-300 group-hover:scale-x-100"></span>
                </a>
            ))}
        </div>
    </nav>

    <div id="mobile-menu" class="hidden fixed inset-0 z-40 bg-gray-800 bg-opacity-95 items-center justify-center flex-col space-y-8 uppercase text-lg tracking-widest font-bold text-white">
        {navLinks.map((link) => (
            <a href={link.href} class="hover:text-yellow-500 transition duration-300">{link.name}</a>
        ))}
    </div>
</header>

<script is:client>
    const menuButton = document.getElementById('menu-button');
    const hamburgerIcon = document.getElementById('hamburger-icon');
    const closeIcon = document.getElementById('close-icon');
    const mobileMenu = document.getElementById('mobile-menu');

    menuButton.addEventListener('click', () => {
        const isMenuOpen = !mobileMenu.classList.contains('hidden');
        if (isMenuOpen) {
            mobileMenu.classList.add('hidden');
            hamburgerIcon.classList.remove('hidden');
            closeIcon.classList.add('hidden');
            document.body.style.overflow = 'auto';
        } else {
            mobileMenu.classList.remove('hidden');
            hamburgerIcon.classList.add('hidden');
            closeIcon.classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }
    });
</script>