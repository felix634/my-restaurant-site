---
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro';

export interface Props {
    title: string;
}

const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel+Decorative:wght@400;700&family=Playfair+Display:wght@400;700&family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style is:global>
        /* CSS for the cursor trail */
        #cursor-trail {
            position: fixed;
            top: 0;
            left: 0;
            width: 20px;
            height: 20px;
            background-color: rgba(255, 255, 255, 0.5);
            border-radius: 50%;
            pointer-events: none; /* Prevents it from blocking clicks */
            z-index: 9999;
            transition: transform 0.1s ease-out; /* Smooth movement */
            transform: translate(-50%, -50%);
            box-shadow: 0 0 15px rgba(255, 255, 255, 0.8), 0 0 5px rgba(255, 255, 255, 0.5); /* Glowing effect */
        }

        /* Your other styles for fonts and colors */
        body {
            font-family: 'Roboto', sans-serif;
            @apply text-gray-700 bg-gray-50;
        }
        h1, h2, h3 {
            font-family: 'Playfair Display', serif;
        }
        .font-cinzel {
            font-family: 'Cinzel Decorative', serif;
        }
    </style>
</head>
<body class="antialiased">
    <div id="cursor-trail"></div>
    <slot />
    <Footer />

    <script>
        document.addEventListener('mousemove', (e) => {
            const cursorTrail = document.getElementById('cursor-trail');
            cursorTrail.style.transform = `translate(${e.clientX}px, ${e.clientY}px)`;
        });
    </script>
</body>
</html>